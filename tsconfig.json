{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
    "lib": [
			"ESNext",
			"DOM"
		],
		"types": [
			"node",
			"jest"
		],

		"outDir": "build",
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"inlineSourceMap": false,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"preserveConstEnums": true,
		"removeComments": false,
		"newLine": "crlf"
	},
	"include": [
		"src/**/*",
		"test/**/*",
		"jest.config.ts",
		"webpack.config.ts"
	]
}
